<view class="container" catchtap='cancel'>
  <view class="scanInput">
   
    <input placeholder-style="font-size:12px" 
    confirm-type="done" bindconfirm="scanBag" placeholder="请扫描条码或输入条码"
     value="{{code}}" id="code"/>
      <view class="img" bindtap="scanCode">
        <image src="../../../../../images/u477.png"></image>
      </view>
  </view>
  <view class="total">
    标本箱<text>{{barcode}}</text>共扫描<text class="red">{{samplesum}}</text>个标本袋
  </view>
  <block wx:for="{{barCode}}">
    <!-- <view 
     bindtouchend='myend' data-bagId="{{item.bagId}}"
    data-bag="{{item.barCode}}"
    data-recordId="{{item.recordId}}"
      bindtap="samples1">
      <text class="codeL"></text>
      
    </view> -->

       <view class='hang'>
    <view class='{{l==item.bagId?"w801":"w800"}}'  data-id="{{item.bagId}}"  bindtouchstart="mytouchstart"  data-recordId="{{item.recordId}}" data-bag="{{item.barCode}}"
    bindtouchmove="mymove" bindtouchend='myend'  bindtap="samples1">
     
      <text class="codeL box">标本袋：{{item.barCode}}</text>     
      <!-- <text class="codeL">{{item.deviceName}}</text> -->
     <text class="">共扫描<text class="red">{{item.sampleSum}}</text>个标本</text>
    </view><view class='w20' wx:if="{{l==item.bagId?true:false}}" bindtap='delBag' data-bagId="{{item.bagId}}">删除</view>    
</view> 
  </block>

     <view class="btn">
    <button bindtap="complete">返回</button>
  </view> 
</view>