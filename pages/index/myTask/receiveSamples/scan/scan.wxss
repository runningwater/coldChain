@import '../../../../../utils/icon.wxss';
.headerWrap{
  background-color: #f3f3f3;
  padding:30rpx 20rpx;
}
.hospitalName{
  padding-bottom: 20rpx;
  color:#333;
  font-size: 34rpx;
}
.scanInput{
  position: relative;
  border: 1px solid #bebebe;
  border-radius: 5px;
  color:#888;
  margin:50rpx 0;  
  padding: 7px 8px;
}
.icon-saoma{
  position: absolute;
  display: inline-block;
  font-size:52rpx;
  line-height: 37.5rpx;
  right:20rpx;
  top:22rpx;
}
.scanNumber{
  float: right;
  font-size:28rpx;
  color:#666;
}
.yellow{
  color:#ee750a;
}
.green{
  color:#1ccaa3;
}
/*按钮*/
.btn{
  margin-top:30rpx;
  border-radius:5px;
}
.btn button{
  overflow: visible;
  background: #009BE2;
  color:#fff;
  font-size: 16px;
  font-weight: bold;
}