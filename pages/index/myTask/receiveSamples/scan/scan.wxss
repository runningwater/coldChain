@import '../../../../../utils/icon.wxss';
.headerWrap{
  background-color: #f3f3f3;
  padding:0.8rem 0.53rem;
}
.hospitalName{
  padding-bottom: 0.53rem;
  color:#333;
  font-size: 0.907rem;
}
.scanInput{
  position: relative;
  border: 1px solid #bebebe;
  border-radius: 5px;
  color:#888;
  margin:1.33rem 0.53rem;  
  padding: 7px 8px;
}
.icon-saoma{
  position: absolute;
  display: inline-block;
  font-size:1.387rem;
  line-height: 1rem;
  right:0.53rem;
  top:0.747rem;
}

.codeList{
  overflow: hidden;
  color:#333;
  margin:0 0.53rem 0.8rem;
  border-bottom:1px solid #bebebe;
}
.codeL{
  float: left
}
.codeR{
  float: right
}
.blue{
  color:#009be2;
}
.yellow{
  color:#ee750a;
}
.green{
  color:#1ccaa3;
}
