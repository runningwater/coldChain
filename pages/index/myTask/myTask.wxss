/* pages/index/myTask/myTask.wxss */
@import '../../../utils/icon.wxss';
.listTitle{
  /* margin-top:15px; */
  background: #f3f3f3;
  padding:15px 10px;
  font-size: 15px;
  color:#666;
  line-height:16px;
}
 text{
  display: inline-block;
}
.hosName{
  width:8rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 不同状态 */
.NOT{
  width:2.88rem;
  margin:0 1rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  border-radius: 11.5px;
  color:#ee750a;
  background-color: #fdf0e4;
  font-size:0.746rem;
}
.YET{
  width:2.88rem;
  margin:0 1rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  border-radius: 11.5px;
  color:#1ccaa3;
  background-color: #e8f8f7;
  font-size:0.746rem;
}
.END{
  width:2.88rem;
  margin:0 1rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  border-radius: 11.5px;
  color:#888;
  background-color: #F3F3F3;
  font-size:0.746rem;
}
.state{
  width:25%;
  text-align:center;
  display: inline-block;
  border-radius: 11.5px;
  vertical-align: top;
}
.time{
  width:30%;
  text-align:center;
  color:#666;
  vertical-align: top;
}
.size{
  font-size:0.746rem;
}
.listContent{
  padding: 35rpx 20rpx;
  border-bottom: 1px solid #cecece;
  position: relative;
  line-height:0.853rem;
  font-size: 0.853rem;
  color:#666; 
}

.icon{
  position: absolute;
  right:55rpx;
  top:55rpx;
}

.hides{
  display: none
}
.shows{
  display: block;
  background: #f3f3f3;
  padding: 30rpx 20rpx;
}
.addTask{
  position: fixed;
  bottom: 0;
  right: 0;
  color: #666;
  background: #fff;
  text-align: center;
  font-size: 10px;
  width: 100%;
  height:44px;
}
.active{
  color: #009be2;
}
.iconfont{
  font-size:44rpx;
}
.taskTab{
  border-top: 1px solid #cecece; 
  float: left;
  width:307.5rpx;
  padding:4px 0;
}
.add{
  border-top:1px solid #cecece; 
  border-radius: 50%;
  float:left;
  width:135rpx;
  height:135rpx;
  margin-top:-58.5rpx;
}
.icon-newlyadded{
  font-size: 135rpx;
  color:#009be2;
  line-height:135rpx;
  
}
/* 新增任务模块 */
.addTasks{
  margin:0 0.53rem;
}
.icon-down{
  position:absolute;
  right:0.64rem;
  top:0.867rem;
  color:#bebebe;
  font-size:0.746rem;
}
.inputCss{
  position:relative;
  border:1px solid #cecece;
  border-radius: 5px;
  padding: 0.53rem;
  margin: 1.07rem 0;
  color:#888;
  font-size:0.853rem;
}
.gray{
  color:#888;
}
.btn{
  margin-top:1.6rem;
  border-radius:5px;
}
.btn button{
  background: #009be2;
  color:#fff;
  font-size: 1.013rem;
  font-weight: bold;
}
/**************************/
/* 已提交任务模块 */
.listContentBox{
  padding: 35rpx 20rpx;
  border-bottom: 1px solid #cecece;
  position: relative;
  line-height:0.853rem;
  font-size: 0.853rem;
  color:#666;
  /* margin-bottom:0.533rem; */
}
.status{
  text-align:center;
  display: inline-block;
  margin-left:3.06rem;
  width:4.2rem;
  vertical-align: top;
}
.hospitalName{
  font-size: 0.906rem;
  color:#333;
  width:8rem;
  height:0.853rem;
  line-height:0.853rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.icon-shrink{
  transform:rotate(180deg);
  position:absolute;
  right:20px;
  color:#bebebe;
  font-size:0.746rem;
}
.FAIL{
  margin:0 1rem;
  width:4.2rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  font-size:0.746rem;
  margin-left:3.06rem;
  color:#ee750a;
}
.SUCCESS{
  margin:0 1rem;
  width:4.2rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  font-size:0.746rem;
  margin-left:3.06rem;
  color:#888;
}
.WAIT{
  margin:0 1rem;
  width:4.2rem;
  text-align:center;
  display: inline-block;
  vertical-align: top;
  font-size:0.746rem;
  margin-left:3.06rem;
  color:#1ccaa3;
}
/* 展开详情部分 */
.titleHospital{
  font-size:0.906rem;
  color:#333;
  padding-bottom:0.8rem;
  border-bottom:1px solid #bebebe;
}
.detail1,.detail2{
  border-bottom:1px dotted #bebebe;
  padding:0.533rem 0;
  font-size: 0.853rem;
  color:#434343;
}
.detail3{
  padding-top:0.533rem;
  font-size: 0.853rem;
  color:#434343;
}
.detail1 text,
.detail2 text,
.detail3 text{
  color:#666;
}