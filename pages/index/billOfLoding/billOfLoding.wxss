/* pages/index/myWayBill/myWayBill.wxss */
@import '../../../utils/icon.wxss';
.tab{
  border-bottom:1px solid #bebebe;
  text-align: center;
}
.tab text{
    display: inline-block;
    width:200rpx;
    padding: 30rpx 0 10rpx;
    margin:0 50rpx;
    font-size: 32rpx;
    text-align: center;
}
.selected{
  color:#009be2;
  border-bottom:2px solid #009be2;
}
.not{
    color:#666;
}
.wrap {
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 20rpx;
}
.top{
  font-size: 32rpx;
  color:#333;
  margin-bottom:30rpx;
}

.icon-qianjin{
  display: inline-block;
  margin:0 30px;
  color:#009be2;
  font-size:36rpx;
}
.left {
  float: left;
  width: 10%;
  font-size: 30px;
  color: #fff;
  background:#FA940C;
  padding: 5px;
  text-align: center;
  border-radius: 50%;
}

.center {
  margin:0 5px;
  font-size: 13px;
  padding-top:8px; 
}

.right {
  display: inline-block;
  float: right;
  font-size: 28rpx;
  color:#888;
  vertical-align: text-top;
  margin-top:4rpx;
}
.bottom{
  color:#666;
  font-size:28rpx;
}
.NOT{
  float:right;
  color:#ee750a;
  background-color: #fdf0e4;
  border-radius:20rpx;
}
.END{
  float:right;
  color:#888;
  background-color: #F3F3F3;
  border-radius:20rpx;
}
.receive{
  text-align: center;
  font-size: 28rpx;
  padding:5rpx 10rpx;
}
.blue{
  color:#009be2;
}


