<view class="container">
  <view class="scanInput">
    <input placeholder-style="font-size:12px" confirm-type="done" bindconfirm="scanNewBox" placeholder="请扫描条码或输入条码" value="{{code}}" id="code" />
    <view class="img" bindtap="scanCode">
      <image src="../../images/u477.png"></image>
    </view>
  </view>
  <checkbox-group bindchange="checkboxChange">

    <view class="codeList" wx:for="{{barCode}}"  bindtouchstart="mytouchstart" bindtouchmove="delBox" bindtouchend='myend' data-transportId="{{item.transportId}}">

      <checkbox value="{{item.transportId}}" />
      <text class="fa fa-medkit X2"></text>
      <text class="padding2" bindtap="scanBag" data-transportId="{{item.transportId}}" data-barcode="{{item.barCode}}">{{item.barCode}}</text>

      <text class="fa fa-tablet X2" data-transportId="{{item.transportId}}" bindtap="bindDevice"></text>
      <text class="padding1">{{item.deviceName}}</text>
      <text class="fR">共扫描<text class="red">{{item.bagCount}}</text>个标本袋</text>
    </view>

  </checkbox-group>


  <view class="btn">
    <button bindtap="waybill">填写运单</button>
  </view>
</view>