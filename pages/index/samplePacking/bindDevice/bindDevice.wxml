<!--pages/index/sampleBox/bindDevice/bindDevice.wxml-->
<view class="container">
  <view class="scanInput">

    <input placeholder-style="font-size:32rpx" placeholder="请扫描或输入设备条码" value="{{deviceBarcode}}" confirm-type="done" bindconfirm="codeValue" id="code" />
    <text class='iconfont icon-saoma' bindtap="scanCode"></text>
  </view>
  <view class="btn">
    <button bindtap="barCodeScan">绑定设备</button>
  </view>
</view>