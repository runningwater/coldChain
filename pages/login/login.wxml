<!--pages/login/login.wxml-->
<view class="container">
  <view class='icon_img'>
    <image style="width: 300rpx; height: 300rpx;"  src='../images/icon.png'></image>
  </view>
  <view>
    <view class="loginInput">
      <input type="text" class="inputUser" placeholder="用户名" value="{{userName}}"  bindinput="bindName"/>
    </view>
    <view class="loginInput">
      <input password class="inputUser" placeholder="密码"  bindinput="bindPwd"/>
    </view>
    <!-- <view class="loginInput">       
     <switch type="switch" bindchange="select"/>记住密码
    </view> -->
    <view class="loginInput">
      <button class='btn' bindtap="login">登录</button>
    </view>    
     <view class="loginInput">
      <text class="forgetPwd" bindtap="forgetPwd">忘记密码？</text>
    </view>  

  </view> 
</view>

